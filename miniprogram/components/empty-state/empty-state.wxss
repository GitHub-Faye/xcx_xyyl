.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  height: 100%;
  min-height: 300rpx;
  text-align: center;
}

.empty-state-icon {
  margin-bottom: 20rpx;
}

.default-icon {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty-state-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 10rpx;
}

.empty-state-message {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
}

.empty-state-action {
  margin-top: 20rpx;
  padding: 12rpx 30rpx;
  background-color: #4785ff;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 30rpx;
}

/* 主题适配 */
.theme-dark .empty-state-title {
  color: #f0f0f0;
}

.theme-dark .empty-state-message {
  color: #dddddd;
}

.theme-dark .default-icon {
  background-color: #444444;
} 