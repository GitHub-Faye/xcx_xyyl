.container {
  min-height: 100vh;
  padding: 30rpx;
  background-color: #f7f9fc;
}

.form-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

input, .picker-value, textarea {
  width: 100%;
  height: 80rpx;
  background-color: #f5f7fa;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

textarea {
  height: 160rpx;
  padding: 20rpx;
  line-height: 1.5;
}

.picker-value {
  display: flex;
  align-items: center;
  color: #333;
}

.blood-pressure-container {
  display: flex;
  align-items: center;
}

.blood-pressure-container input {
  flex: 1;
}

.separator {
  margin: 0 20rpx;
  font-size: 32rpx;
  color: #999;
}

.form-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 60rpx;
}

.cancel-btn, .save-btn {
  width: 46%;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.cancel-btn {
  background-color: #f0f0f0;
  color: #666;
}

.save-btn {
  background-color: #3f51b5;
  color: #fff;
}
