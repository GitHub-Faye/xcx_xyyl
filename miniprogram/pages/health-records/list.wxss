/* 健康记录列表页样式 */
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding-bottom: 40rpx;
}

/* 顶部标题和添加按钮 */
.top-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  position: relative;
  margin-bottom: 20rpx;
}

.page-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

/* 新的添加数据按钮样式 */
.add-data-btn {
  height: 70rpx;
  padding: 0 30rpx;
  line-height: 70rpx;
  background-color: #1aad19;
  color: #fff;
  font-size: 28rpx;
  border-radius: 35rpx;
  margin: 0;
  font-weight: normal;
}

/* 登录提示卡片调整 - 使用蓝色样式 */
.login-tip-card {
  margin: 20rpx 30rpx;
  padding: 20rpx;
  border-radius: 8rpx;
  background-color: #e6f7ff;
  display: flex;
  align-items: center;
}

.login-tip-text {
  font-size: 24rpx;
  color: #1989fa;
  margin-left: 10rpx;
  flex: 1;
}

/* 头部区域 */
.header {
  background-color: #fff;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 筛选器容器 */
.filters {
  padding: 15rpx 30rpx;
}

/* 日期筛选和添加按钮容器 */
.date-filter-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 日期筛选 */
.date-filter {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  flex-wrap: wrap;
  width: 100%;
  border-bottom: 1rpx solid #eee;
}

.date-picker {
  background-color: #f5f7fa;
  padding: 15rpx 25rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  min-width: 190rpx;
  text-align: center;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.05);
  margin: 0 15rpx;
}

.date-separator {
  margin: 0 15rpx;
  color: #999;
  font-size: 28rpx;
  font-weight: bold;
}

/* 记录列表 */
.record-list {
  padding: 0 30rpx;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

/* 记录类型 */
.record-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.type-icon {
  width: 50rpx;
  height: 50rpx;
  object-fit: contain;
}

/* 记录内容 */
.record-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.record-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

/* 记录时间 */
.record-time {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

/* 操作按钮 */
.record-actions {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.action-btn {
  margin: 0;
  padding: 0;
}

/* 删除按钮样式 */
.delete-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 5rpx 20rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #f44336;
  color: white;
}

.action-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.delete-text {
  font-size: 24rpx;
}

.action-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  margin: 10rpx 0;
}

.edit {
  background-color: rgba(24, 144, 255, 0.1);
}

.delete {
  background-color: rgba(245, 34, 45, 0.1);
}

.loading {
  font-size: 24rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30rpx 0;
  color: #1890ff;
  font-size: 26rpx;
}

.loading-indicator {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 26rpx;
}

.no-more {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.empty-image {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-action {
  padding: 15rpx 40rpx;
  background-color: #1890ff;
  color: #fff;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.btn-primary {
  background-color: #1aad19;
  color: #fff;
  border: none;
  padding: 12rpx 40rpx;
  border-radius: 8rpx;
}

/* 登录按钮样式 */
.login-now-btn {
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
  background-color: #1989fa;
  color: #fff;
  margin: 0;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 50rpx 0;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #1aad19;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
} 