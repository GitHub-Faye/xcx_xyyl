/* 健康记录列表页样式 */
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding-bottom: 40rpx;
}

/* 筛选区域 */
.filter-section {
  background-color: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 日期筛选和添加按钮容器 */
.date-filter-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 日期筛选 */
.date-filter {
  display: flex;
  align-items: center;
  flex: 1;
}

.date-picker {
  background-color: #f5f7fa;
  padding: 15rpx 20rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  min-width: 180rpx;
  text-align: center;
}

.date-separator {
  margin: 0 15rpx;
  color: #999;
  font-size: 26rpx;
}

/* 添加按钮样式 */
.add-button {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: #1890ff;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
  margin-left: 20rpx;
}

.add-icon {
  font-size: 44rpx;
  color: #fff;
  line-height: 1;
}

/* 记录列表 */
.record-list {
  padding: 0 30rpx;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

/* 记录类型 */
.record-type {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  margin-right: 20rpx;
}

.record-icon {
  width: 60rpx;
  height: 60rpx;
}

/* 记录内容 */
.record-content {
  flex: 1;
}

.record-main {
  display: flex;
  flex-direction: column;
}

.record-value {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.value-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.value {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.value-extra {
  font-size: 26rpx;
  color: #666;
  margin-left: 15rpx;
}

/* 备注 */
.record-note {
  font-size: 26rpx;
  color: #999;
  margin-top: 6rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  word-break: break-all;
}

/* 记录时间 */
.record-time {
  font-size: 24rpx;
  color: #bbb;
  margin-top: 6rpx;
}

/* 操作按钮 */
.record-actions {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 20rpx;
}

.action-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  margin: 10rpx 0;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
}

.edit {
  background-color: rgba(24, 144, 255, 0.1);
}

.delete {
  background-color: rgba(245, 34, 45, 0.1);
}

.loading {
  font-size: 24rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30rpx 0;
  color: #1890ff;
  font-size: 26rpx;
}

.loading-indicator {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 26rpx;
}

.no-more {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-action {
  padding: 15rpx 40rpx;
  background-color: #1890ff;
  color: #fff;
  border-radius: 30rpx;
  font-size: 28rpx;
} 