/* 页面容器 */
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding: 30rpx;
}

/* 匿名模式提示样式 */
.anonymous-tip {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #e6f7ff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.anonymous-tip .tip-text {
  font-size: 24rpx;
  color: #1989fa;
  margin-left: 10rpx;
  flex: 1;
}

/* 筛选器样式 */
.filter-container {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.filter-item {
  display: flex;
  flex-direction: column;
  width: 48%;
}

.filter-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.picker-value {
  height: 70rpx;
  background-color: #f5f7fa;
  border-radius: 8rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

/* 统计卡片样式 */
.stats-card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
  overflow: hidden;
}

.stats-header {
  padding: 24rpx;
  background-color: #3f51b5;
}

.stats-title {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}

.stats-content {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
}

.stat-item {
  width: 50%;
  padding: 15rpx 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.stat-value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

/* 图表样式 */
.chart-container {
  width: 100%;
  background-color: #fff;
  border-radius: 12rpx;
  margin: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.chart-header {
  padding: 20rpx;
}

.chart-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.chart-subtitle {
  font-size: 24rpx;
  color: #666;
  margin-left: 20rpx;
}

.chart-content {
  width: 100%;
  height: 500rpx;
  position: relative;
}

.chart-wrapper {
  width: 100%;
  height: 100%;
}

.chart-canvas {
  width: 100%;
  height: 100%;
}

.no-data {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  color: #999;
  font-size: 28rpx;
}

/* 提示样式 */
.tips-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tip-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.tip-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 加载状态 */
.loading-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3f51b5;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 数据列表样式 */
.data-list {
  width: 100%;
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
}

.data-list-header {
  display: flex;
  background-color: #f0f4ff;
  padding: 20rpx 30rpx;
  font-weight: bold;
  color: #333;
  border-bottom: 1px solid #e0e0e0;
}

.data-list-body {
  height: 600rpx;
  width: 100%;
}

.data-list-row {
  display: flex;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #f0f0f0;
  align-items: center;
}

.even-row {
  background-color: #f9f9f9;
}

.odd-row {
  background-color: #ffffff;
}

.data-list-cell-date {
  flex: 1;
  color: #666;
  font-size: 28rpx;
  padding-right: 20rpx;
}

.data-list-cell-value {
  flex: 1;
  text-align: right;
  font-size: 32rpx;
  font-weight: 500;
  color: #3f51b5;
}

/* 如果存在.data-list-cell的旧样式，保留它以避免影响其他地方 */
.data-list-cell {
  flex: 1;
  padding: 10rpx;
  text-align: center;
}
