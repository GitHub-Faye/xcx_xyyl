.container {
  min-height: 100vh;
  padding: 30rpx;
  background-color: #f7f9fc;
}

/* 筛选器样式 */
.filter-container {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.filter-item {
  display: flex;
  flex-direction: column;
  width: 48%;
}

.filter-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.picker-value {
  height: 70rpx;
  background-color: #f5f7fa;
  border-radius: 8rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

/* 统计卡片样式 */
.stats-card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
  overflow: hidden;
}

.stats-header {
  padding: 24rpx;
  background-color: #3f51b5;
}

.stats-title {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}

.stats-content {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
}

.stat-item {
  width: 50%;
  padding: 15rpx 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.stat-value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

/* 图表样式 */
.chart-container {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
  overflow: hidden;
}

.chart-header {
  padding: 24rpx;
  border-bottom: 1rpx solid #eee;
}

.chart-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  display: block;
}

.chart-subtitle {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
  display: block;
}

.chart-content {
  height: 400rpx;
  position: relative;
}

.chart-canvas-container {
  width: 100%;
  height: 100%;
}

.no-data {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  color: #999;
  font-size: 28rpx;
}

/* 提示样式 */
.tips-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tip-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.tip-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 加载状态 */
.loading-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3f51b5;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
