.container {
  padding: 30rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #333;
}

input, textarea {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

textarea {
  height: 160rpx;
}

.picker {
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.weekdays {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 10rpx;
}

.weekday {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #ddd;
  border-radius: 50%;
  font-size: 28rpx;
}

.weekday.selected {
  background-color: #07c160;
  color: white;
  border-color: #07c160;
}

.times-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.time-item {
  position: relative;
  display: flex;
  align-items: center;
}

.time-picker {
  padding: 10rpx 40rpx 10rpx 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.delete-time {
  position: absolute;
  right: 10rpx;
  color: #999;
  font-size: 32rpx;
}

.add-time {
  width: 160rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx dashed #ddd;
  border-radius: 8rpx;
  color: #999;
}

.submit-btn {
  margin-top: 60rpx;
  width: 100%;
} 