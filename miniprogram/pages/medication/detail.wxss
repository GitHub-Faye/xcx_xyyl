.container {
  padding: 20rpx;
}

.detail-card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
  overflow: hidden;
  padding: 30rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.medication-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.status-indicator {
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

.status-indicator.active {
  background-color: #e6f7e6;
  color: #4caf50;
}

.status-indicator.inactive {
  background-color: #f5f5f5;
  color: #9e9e9e;
}

.info-section {
  margin-top: 20rpx;
}

.info-item {
  margin-bottom: 24rpx;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.info-content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
}

.times-list {
  display: flex;
  flex-wrap: wrap;
}

.time-item {
  background-color: #f5f5f5;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.btn-primary {
  background-color: #3f51b5;
  color: #fff;
}

.btn-edit {
  background-color: #f5f5f5;
  color: #333;
}

.btn-delete {
  background-color: #ffebee;
  color: #f44336;
}

.loading-state, .error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3f51b5;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text, .error-text {
  font-size: 28rpx;
  color: #999;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.retry-btn {
  margin-top: 30rpx;
  background-color: #f5f5f5;
  color: #333;
  font-size: 28rpx;
  padding: 10rpx 40rpx;
} 