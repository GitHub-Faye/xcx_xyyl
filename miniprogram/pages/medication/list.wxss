/* 列表页样式 */
.container {
  padding: 30rpx;
  padding-bottom: 150rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
}

.add-btn {
  width: 80rpx;
  height: 80rpx;
  background-color: #4785ff;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  box-shadow: 0 4rpx 8rpx rgba(71, 133, 255, 0.3);
}

.reminder-list {
  margin-top: 20rpx;
}

.reminder-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.reminder-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.reminder-name {
  font-size: 34rpx;
  font-weight: 500;
  color: #333333;
}

.reminder-info {
  margin-bottom: 16rpx;
}

.reminder-times, .reminder-frequency {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  flex-wrap: wrap;
}

.icon-time, .icon-calendar {
  margin-right: 10rpx;
  font-size: 32rpx;
}

.time-tag {
  background-color: #f0f7ff;
  color: #4785ff;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  margin-right: 10rpx;
  margin-bottom: 8rpx;
}

.reminder-description {
  font-size: 28rpx;
  color: #999999;
  margin-top: 20rpx;
  line-height: 1.5;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-image {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.btn-primary {
  background-color: #1aad19;
  color: #fff;
  border: none;
  padding: 12rpx 40rpx;
  border-radius: 8rpx;
}

.native-loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(71, 133, 255, 0.3);
  border-top-color: #4785ff;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

.loading-text {
  font-size: 30rpx;
  color: #999999;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 主题适配 */
.theme-dark {
  background-color: #1f1f1f;
}

.theme-dark .page-title {
  color: #f0f0f0;
}

.theme-dark .reminder-card {
  background-color: #2c2c2c;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.2);
}

.theme-dark .reminder-name {
  color: #f0f0f0;
}

.theme-dark .time-tag {
  background-color: #364c6d;
  color: #88b0ff;
}

.theme-dark .reminder-description {
  color: #b0b0b0;
}

.theme-dark .loading-text {
  color: #b0b0b0;
} 