.container {
  min-height: 100vh;
  background-color: #f7f9fc;
  padding-bottom: 40rpx;
}

/* 用户信息卡片 */
.user-card {
  background-color: #3f51b5;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
}

.avatar-container {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: #fff;
  border: 4rpx solid #fff;
}

.avatar-placeholder {
  position: absolute;
  top: 0;
  left: 0;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: rgba(0, 0, 0, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
}

.avatar-placeholder text {
  color: #fff;
  font-size: 20rpx;
  text-align: center;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.username {
  color: #fff;
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.user-id {
  color: rgba(255, 255, 255, 0.7);
  font-size: 24rpx;
}

/* 选项区域 */
.section {
  background-color: #fff;
  margin: 20rpx 0;
}

.section-header {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.section-content {
  padding: 0 30rpx;
}

.profile-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.profile-item:last-child {
  border-bottom: none;
}

