/* api-test.wxss */
.container {
  padding: 30rpx;
}

.page-header {
  margin-bottom: 40rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.page-desc {
  font-size: 26rpx;
  color: #666;
  display: block;
}

.test-control {
  margin-bottom: 30rpx;
}

.primary-btn {
  background-color: #1aad19;
  color: #fff;
}

.results-container {
  width: 100%;
}

.no-results, .loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  color: #888;
  font-size: 28rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin: 20rpx 0;
  display: block;
}

.result-item {
  background-color: #f8f8f8;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #ccc;
}

.result-item.success {
  border-left-color: #1aad19;
}

.result-item.error {
  border-left-color: #e64340;
}

.result-item.pending {
  border-left-color: #fdbc2e;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.result-name {
  font-weight: bold;
  font-size: 28rpx;
}

.result-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  background-color: #ccc;
  color: #fff;
}

.result-status.success {
  background-color: #1aad19;
}

.result-status.error {
  background-color: #e64340;
}

.result-status.pending {
  background-color: #fdbc2e;
}

.result-message {
  font-size: 26rpx;
  color: #333;
  margin: 10rpx 0;
}

.result-data {
  margin-top: 10rpx;
  background-color: #efefef;
  padding: 16rpx;
  border-radius: 8rpx;
  max-height: 300rpx;
  overflow-y: auto;
}

.data-preview {
  font-size: 24rpx;
  font-family: monospace;
  word-break: break-all;
  white-space: pre-wrap;
} 