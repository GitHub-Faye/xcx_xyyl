/**app.wxss**/
page {
  --primary-color: #3f51b5;
  --secondary-color: #ff4081;
  --text-color: #333333;
  --light-text-color: #999999;
  --background-color: #f5f5f5;
  --border-color: #eeeeee;
  --success-color: #4caf50;
  --warning-color: #ff9800;
  --error-color: #f44336;
  
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: var(--text-color);
  background-color: var(--background-color);
}

/* 布局容器 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  padding: 20rpx;
}

/* 标题样式 */
.title {
  font-size: 18px;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 16px;
  font-weight: 500;
  color: var(--light-text-color);
  margin-bottom: 16rpx;
}

/* 表单样式 */
.form-group {
  margin-bottom: 20rpx;
}

.form-label {
  display: block;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.form-control {
  width: 100%;
  height: 80rpx;
  padding: 0 16rpx;
  border: 1px solid var(--border-color);
  border-radius: 4rpx;
  box-sizing: border-box;
}

/* 按钮样式 */
.btn {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  padding: 0 30rpx;
  border-radius: 4rpx;
  font-size: 14px;
  font-weight: 500;
}

.btn-primary {
  background-color: var(--primary-color);
  color: #ffffff;
}

.btn-secondary {
  background-color: var(--secondary-color);
  color: #ffffff;
}

/* 其他通用样式 */
.text-center {
  text-align: center;
}

.mt-10 {
  margin-top: 20rpx;
}

.mb-10 {
  margin-bottom: 20rpx;
}

/* 列表样式 */
.list-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid var(--border-color);
}

.list-item:last-child {
  border-bottom: none;
}

/* 统计卡片 */
.stat-card {
  background-color: #ffffff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.stat-value {
  font-size: 24px;
  font-weight: 500;
  color: var(--primary-color);
}

.stat-label {
  font-size: 12px;
  color: var(--light-text-color);
} 
