{
  "compilerOptions": {
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "ES2015",
    "target": "ES2017",
    "allowJs": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "inlineSourceMap": true,
    "lib": ["ES5", "ES2015", "ES2017", "DOM"],
    "typeRoots": ["./typings"],
    "noEmitHelpers": true,
    "experimentalDecorators": false,
    "esModuleInterop": false,
    "skipLibCheck": true
  },
  "include": [
    "./miniprogram/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "miniprogram_npm"
  ]
}
