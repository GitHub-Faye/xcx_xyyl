{
  "pages": [
    "pages/health-records/list",
    "pages/auth/auth",
    "pages/health-records/add",
    "pages/health-records/edit",
    "pages/health-records/detail",
    "pages/health-statistics/index",
    "pages/settings/personal/personal",
    "pages/settings/privacy/privacy",
    "pages/settings/notification/notification",
    "pages/settings/terms/terms"
  ],
  "window": {
    "backgroundTextStyle": "light",
    "navigationBarBackgroundColor": "#4785ff",
    "navigationBarTitleText": "小艺医疗",
    "navigationBarTextStyle": "white"
  },
  "tabBar": {
    "custom": true,
    "color": "#999999",
    "selectedColor": "#4785ff",
    "backgroundColor": "#ffffff",
    "borderStyle": "black",
    "list": [
      {
        "pagePath": "pages/health-records/list",
        "text": "健康记录"
      },
      {
        "pagePath": "pages/health-statistics/index",
        "text": "数据统计"
      }
    ]
  },
  "permission": {
    "scope.userLocation": {
      "desc": "您的位置信息将用于提供更精准的健康服务"
    }
  },
  "usingComponents": {
    "empty-state": "/miniprogram/components/empty-state/empty-state",
    "toast": "/miniprogram/components/toast/toast",
    "loading-indicator": "/miniprogram/components/loading/loading",
    "modal": "/miniprogram/components/modal/modal"
  },
  "style": "v2",
  "sitemapLocation": "sitemap.json",
  "componentFramework": "glass-easel",
  "rendererOptions": {
    "skyline": {
      "defaultDisplayBlock": true,
      "disableABTest": true,
      "sdkVersionBegin": "3.0.0",
      "sdkVersionEnd": "15.255.255"
    }
  },
  "componentPlaceholder": {
    "empty-state": "view",
    "toast": "view",
    "loading-indicator": "view",
    "modal": "view"
  },
  "lazyCodeLoading": "requiredComponents",
  "resolveAlias": {
    "@/*": "/*"
  },
  "darkmode": true,
  "themeLocation": "theme.json",
  "debug": false
} 